#!/usr/bin/env python3

import re
from sys import argv
from pathlib import Path

if len(argv) < 3:
    print("Usage: iso2usb <iso> <device>")
    exit(0)

isoRegex = re.compile('.*\.iso')

iso = Path(argv[1])
device = Path(argv[2])

if not iso.is_file() or not isoRegex.match(iso):
    print(f"'{iso}' is not a valid ISO!")

if not device.is_block_device():
    print(f"'{device}' is not a valid device!")
